{
  "name": "my-meta-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn main.ts --trace-warnings",
    "test": "dotenv -e .env.test -- jest --detectOpenHandles",
    "test:watch": "dotenv -e .env.test -- jest --watchAll",
    "test:cov": "dotenv -e .env.test -- jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env.test -- jest -i --no-cache --watchAll --config ./test/jest-e2e.json --runInBand",
    "d-service:restart": "docker compose down && docker compose up -d && sleep 2",
    "d-test-service:restart": "docker compose --file=docker-compose.test.yml up -d && sleep 2",
    "test:prepare": "npm run d-test-service:restart && sleep 5",
    "test:int": "dotenv -e .env.test -- jest -i --no-cache --watchAll --config jest-int.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "argon2": "^0.28.7",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "bull": "^4.8.5",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.3",
    "glob": "^7.1.6",
    "ioredis": "^4.28.5",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "nanoid": "^3.3.1",
    "node-fetch": "^3.3.2",
    "node-pushnotifications": "^2.0.3",
    "notifme-sdk": "^1.11.0",
    "reflect-metadata": "^0.1.13",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bull": "^3.15.9",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.21",
    "dotenv-cli": "^6.0.0",
    "jest": "^28.1.3",
    "mongodb-memory-server": "^8.15.1",
    "notification-catcher": "^1.2.1",
    "supertest": "^6.2.4",
    "ts-jest": "28.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/$1",
      "^@types/(.*)$": "<rootDir>/@types/$1",
      "^@common/(.*)$": "<rootDir>/common/$1",
      "^@config/(.*)$": "<rootDir>/config/$1",
      "^@database/(.*)$": "<rootDir>/database/$1",
      "^@jobs/(.*)$": "<rootDir>/jobs/$1",
      "^@modules/(.*)$": "<rootDir>/modules/$1",
      "^@core/(.*)$": "<rootDir>/core/$1",
      "^@notifications/(.*)$": "<rootDir>/notifications/$1",
      "^@scripts/(.*)$": "<rootDir>/scripts/$1",
      "^@providers/(.*)$": "<rootDir>/providers/$1"
    }
  }
}
